{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 350,
  "projection":  {"type": "mercator"},
  "data": {
    "url": "ne_1.json",
    "format": {"type": "topojson", "feature": "ne_10m_admin_1_states_provinces"}
  },
  "transform": [
    {
      "lookup": "properties.name",
      "from": {
        "data": {
          "url": "hies_state.csv"
        },
        "key": "state",
        "fields": ["income_mean"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "income_mean",
      "type": "quantitative",
      "scale": {"scheme": "blues"},
      "legend": {
        "title": "Mean Household Income",
        "orient": "bottom",     
        "direction": "horizontal"
      }  
    },
    "tooltip": [
      {"field": "properties.name", "type": "nominal", "title": "State"},
      {"field": "income_mean", "type": "quantitative", "title": "income_mean"}
    ]
  }
}

